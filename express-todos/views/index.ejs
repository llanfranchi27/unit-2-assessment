<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>To-Do List</h1>
    <% if(todo.length === 0) { %>
      <h3>No To-Dos yet</h3>
      <%  } %>

<ul>
      <% todo.forEach(function(t){ %>
        <li>
         <%= t.todo %> - <%= t.done ? 'Done' : 'Not Done' %>
         <form action="/ <%= todo.indexOf(t) %>?_method=DELETE" method="POST"><button type="submit">DELETE</button></form>
       
        </li>
        <% }) %>

  </ul>

  <hr>
  <form action="/" method="POST">
    <input type="text" name="todo" required autofocus>
    <button type="submit">Add To-Do</button>
  </form>
  </body>
</html>
